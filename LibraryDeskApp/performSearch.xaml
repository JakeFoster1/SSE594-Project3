<Window x:Class="LibraryDeskApp.performSearch"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryDeskApp"
        mc:Ignorable="d"
        Title="performSearch" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock Name="tb_title" Text="Book Search" HorizontalAlignment="Center" FontSize="30"></TextBlock>
            <Button Name="btn_showAll" Content="Show All Books" Click="Btn_Get_All_Books"></Button>
        </StackPanel>
    </Grid>
</Window>
