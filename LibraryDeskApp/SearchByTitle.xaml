<Window x:Class="LibraryDeskApp.SearchByTitle"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryDeskApp"
        mc:Ignorable="d"
        Title="SearchByTitle" Height="450" Width="300">
    <Grid>
        <StackPanel>
            <TextBlock Text="Search by Title" HorizontalAlignment="Center" FontSize="30"/>
            <WrapPanel>
                <TextBlock Text="Title: " />
                <TextBox Name="tb_Title" Width="200"></TextBox>
                <Button Content="Search" Click="btn_Search" />
            </WrapPanel>
        </StackPanel>
    </Grid>
</Window>
