<Window x:Class="LibraryDeskApp.SearchByAuthor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryDeskApp"
        mc:Ignorable="d"
        Title="SearchByAuthor" Height="450" Width="300">
    <Grid>
        <StackPanel>
            <TextBlock Text="Search By Author" HorizontalAlignment="Center" FontSize="30" />
            <WrapPanel>
                <TextBlock Text="Author: " />
                <TextBox Name="tb_Author" Width="200"/>
                <Button Content="Search" Click="Search"></Button>
            </WrapPanel>
        </StackPanel>
    </Grid>
</Window>
